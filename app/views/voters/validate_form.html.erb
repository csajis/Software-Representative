<p id="notice"><%= notice %></p>
<%= form_tag(validate_doc_voter_path(@voter), method: :post) do %>
  <div class="form-group">
    <%= label_tag :doc_type %>
    <%= select_tag :doc_type, options_for_select(IdentityDoc.doc_types.map {|k, v| [k.humanize.capitalize, v]}) %>
  </div>
  
  <div class="form-group">
    <%= label_tag :run %>
    <%= text_field_tag :run, params[:run], 'class' => 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :doc_number %>
    <%= text_field_tag :doc_number, params[:doc_number], 'class' => 'form-control' %>
  </div>
  
  <button type="submit" class="btn btn-primary">Validar</button>

<% end %>
