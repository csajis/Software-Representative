    </div>
  </div>
  <div class="col-xs-12" style="height:20px;"></div> 
  <div class = "row">
    <div class = "col-sm">
      <div class = "text-center">
        <div class="actions">
          <%= form.submit "Cambiar Imagén", :name => "Cambiar", class: 'btn btn-primary btn-lg btn-bloc' %>
          <div class="col-xs-12" style="height:20px;"></div> 
          <%= link_to 'Volver',  @voter , method: 'get', class: "btn btn-sm btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
