    </div>
    <div class = "col-sm">
      <%= form.radio_button(:imgpath, '/images/perfil3.png') %>
      <img src= '/images/perfil3.png' class="rounded" alt="profile" style=" height: 100%; width: 100%; max-height: 50px; max-width: 50px;">
    </div>
  </div>
  <div class="col-xs-12" style="height:20px;"></div>  
  <div class = "row">
    <div class = "col-sm">
      <%= form.radio_button(:imgpath, '/images/perfil4.png') %>
      <img src= '/images/perfil4.png' class="rounded" alt="profile" style=" height: 100%; width: 100%; max-height: 50px; max-width: 50px;">
    </div>
