<%= form_with(model: @voter, local: true) do |form| %>
  
  <div class = "row">
    <div class = "col-sm">
      <div class = "text-center">
        <h1>Imagén de perfil</h1>
      </div>
    </div>
  </div>
  <div class = "row">
    <div class = "col-sm">
      <div class="text-center">
        <img src= <%= @voter.imgpath %> class="rounded" alt="/images/default.jpg" style=" height: 100%; width: 100%; max-height: 200px; max-width: 200px;">
      </div>
    </div>
  </div>
  <hr>
  <div class = "row">
    <div class = "col-sm">
      <%= form.radio_button(:imgpath, '/images/default.jpg') %>
