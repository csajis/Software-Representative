<style> h1 { color: yellow; text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black; } </style>

<p id="notice"><%= notice %></p>



<div class="text-center">
<p class="mb-0"><h1>Perfil De Usuario</h1></p>
</div>


<div class="container">
  <%= render 'profile_form', voter: @voter %>
  <% if @voter == current_user%>
    <div class="col-sm">
      <div class="col-xs-12" style="height:100px;"></div>
      <div class="container">
        <div class="row">
          <div class="col-7">
            <% if !@voter.validated_doc? %>
              <d1 class="row">
                <p><strong> Presiona para validar tu RUT</strong></p>
              </d1>
              <div class="col-xs-12" style="height:25px;"></div>
            <% end %>
            <d1 class="row">
              <p><strong>  ¿Necesitas cambiar algo? presiona </strong></p>
            </d1>
            <div class="col-xs-12" style="height:25px;"></div>
            <d1 class="row">
              <p><strong> Para ver tus suscripciones presiona </strong></p>
            </d1>
            <div class="col-xs-12" style="height:10px;"></div>
            <d1 class="row">
              <p><strong> ¿Quieres cambiar tu imagén? presiona </strong></p>
            </d1>
            <div class="col-xs-12" style="height:10px;"></div>
            <d1 class="row">
              <p><strong> ¿Quieres volver? Presiona </strong></p>
            </d1>
          </div>
          <div class="col">
            <% if !@voter.validated_doc? %>
            <%= link_to 'Validar',  validate_doc_voter_path , method: 'get', class: "btn btn-sm btn-success" %>
              <div class="col-xs-12" style="height:25px;"></div>
            <% end %>
            <d1 class="row">
              <%= link_to 'Editar Perfil',  edit_voter_path(current_user) , method: 'get', class: "btn btn-sm btn-success" %>
            </d1>
            <div class="col-xs-12" style="height:25px;"></div>
            <d1 class="row">
              <%= link_to 'Mis Suscripciones',  my_subscriptions_path , method: 'get', class: "btn btn-sm btn-success" %>
            </d1>
            <div class="col-xs-12" style="height:25px;"></div>
            <d1 class="row">
              <%= link_to 'Cambia Imagén',  imgchange_path , method: 'get', class: "btn btn-sm btn-success" %>
            </d1>
            <div class="col-xs-12" style="height:25px;"></div>
            <d1 class="row">
              <%= link_to 'Volver al Dashboard',  votations_path , method: 'get', class: "btn btn-sm btn-success" %>
            </d1>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>