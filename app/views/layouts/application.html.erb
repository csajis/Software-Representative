<!DOCTYPE html>
  <head>
    <title>Representative</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if user_signed_in? %>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Representative</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarsExample04">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item text-nowrap">
              <%= link_to 'Votaciones', votations_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%if current_user.type == "Voter" %>
                <%= link_to 'Mis Votaciones', myvotations_path, class: "nav-link" %>
              <% end %>
              <%if current_user.type == "Admin" %>
                <%= link_to 'Lista de Usuarios', voters_path, class: "nav-link" %>
              <% end %>
            </li>
          </ul>
          <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
              <%= link_to 'Perfil', voter_path(current_user), class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav px-3">
            <li class="nav-item text-nowrap">
              <%= link_to('Cerrar sesion', destroy_user_session_path, method: :delete, class: "nav-link") %>
            </li>
          </ul>
        </div>
      </nav>

      <% else %>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Representative</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample04" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarsExample04">
              <ul class="navbar-nav mr-auto">
                <li class="nav-item text-nowrap">
                  <%= link_to 'Votaciones', votations_public_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Iniciar sesiÃ³n', new_user_session_path, class: "nav-link" %>
                </li>
              </ul>
              <ul class="navbar-nav px-3">
                <li class="nav-item text-nowrap">
                  <%= link_to 'Registrarme', new_user_registration_path, class: "nav-link" %>
                </li>
              </ul>
            </div>
          </nav>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
