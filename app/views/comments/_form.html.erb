<%= form_with(model: comment, local: true) do |form| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(comment.errors.count, "error") %> No dejo que el comentario se guardara:</h2>

      <ul>
      <% comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :contentenido %>
    <%= form.text_area :content, id: :comment_content %>
  </div>

  <%= form.hidden_field :votation_id, id: :comment_votation_id %>

  <%= form.hidden_field :voter_id, id: :comment_voter_id %>

  <div class="actions">
    <%= form.submit 'Confirmar Cambios'%>
  </div>
<% end %>
