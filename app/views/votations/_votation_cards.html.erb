<div class="card-columns">
  <% votations.each do |votation| %>
    <%if votation.started? or (votation.created? and votation.owner == current_user) or votation.ended? or votation.published?%>
      <%= link_to votation, class: 'deco-none' do %>
        <div class="card">
          <img class="card-img-top" data-src=<%= votation.imgpath %> alt="Votation State" src=<%= votation.imgpath %> data-holder-rendered="true" style="height: 160px; width: 100%; display: block;">
          <div class="card-body">
            <h5 class="card-title"><%= truncate(votation.name.capitalize, length: 25) %></h5>
            <p class="card-text"><%= truncate(votation.description.capitalize, length: 100)%></p>
            <% if votation.owner == current_user %>
              <small class="text-muted">Propietario</small>
            <% end %>
            <br>
            <% if votation.owner == current_user or current_user.type=="admin" %>
              <small class="text-muted">Estado:  <%= votation.state%></small>
            <% end %>
          </div>
        </div>
      <% end %>
    <% end %>
  <% end %>
</div>